<p id="notice"><%= notice %></p>

<h1>Listing Contatos</h1>


<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td>
          <div class="gravatar" style="background:transparent url(<%= gravatar_image_url(contato.email.gsub('spam', 'mdeering'), size: 30) %>) 0px 0px no-repeat; width:100px; height:100px;">
          </div>
          </td>

        <td><%= contato.nome %></td>
        <td><%= contato.email %></td>
        <td><%= contato.telefone %></td>
        <td><%= link_to 'Show', contato %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contato', new_contato_path %>
